
  <% set_meta_tags title: "「どこ行く？」 近くの居酒屋、バル、バーを探す", description: "「どこ行くか迷ってない？」徒歩5分でお店を探します。一件目の居酒屋や朝まで過ごすバーなど...", keywords: '居酒屋, バー, 近く' %>

    <div class="site-section bg-white">
      <div class="container">
        <%items = @response["results"]["shop"]%>
          <%@items.each do |item|%>
          <div class="card text-center" style="width: w-100">
            <img src="<%= item["photo"]["pc"]["l"] %>" alt="Image" class="img-fluid rounded">
              <div class="card-body">
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item"><label for="name1">店名</label><br/><%=  item["name"] %></li>
                    <li class="list-group-item"><label for="name1">ジャンル</label><br/><%=  item["genre"]["name"] %></li>
                    <li class="list-group-item"><label for="name1">場所</label><br/><%=  item["mobile_access"] %></li>
                    <li class="list-group-item"><label for="name1">予算<%=  item["budget"]["name"] %></li>
                    <li class="list-group-item"><label for="name1">飲み放題</label><br/><%=  item["free_drink"].slice(0,2) %></li>
                    <li class="list-group-item"><label for="name1">23時以降</label><br/><%= item["midnight"] %></li>
                    <li class="list-group-item"><label for="name1">タバコ</label><br/><%=  item["non_smoking"] %></li>
                    <li class="list-group-item"><label for="name1">営業日</label><br/><%=  item["open"] %></li>
                  </ul>
              </div>
              <div class="card-footer text-center ">
              <%= link_to '詳細をみる！',  item["urls"]["pc"] %>
          </div>
        </div>
        <%end%>
        <div class="row text-center pt-5 border-top">
          <div class="col-md-12">
              <%= paginate @items if @items.present?%>
          </div>
        </div>
    </div>
  </div>
