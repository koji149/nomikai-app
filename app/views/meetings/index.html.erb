                </div>
                <div class= "nav-item nav-link active rounded-0 bg-transparent">
                  <button type="button" class="btn btn-success rounded-pill btn-lg"><%= link_to "詳細", meeting_path(id: meeting.id, detail: current_user.id), remote: true, class: "fas fa-user-friends text-white"%></button>
                </div>
              <% end %>
              </nav>
            </footer>
        </div>
      </div>
    <%else%>
      <div class="carousel-item ">
