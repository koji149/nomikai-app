<div id="carouselExampleControls" class="carousel slide" data-ride="false" >
  <div class="carousel-inner">
  <%i = 0%>
  <%@meetings.each do |meeting|%>
    <%if i == 0%>
      <div class="carousel-item active">
        <div style="width: 100vw; height: auto; min-height: 100vh;display: -webkit-box; display: -ms-flexbox; display: flex; -webkit-box-align: center; -ms-flex-align: center; align-items: center;;">
