<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <%= form_with(model: @meeting) do |f| %>
    <div class="modal-header">
      <h5 class="modal-title">募集条件を記入してください</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">

      <%#<div class="form-group field">
        <%= f.label :"場所" , class: "form-control-label"%>
        <%#<%= f.select :area, Meeting.areas.keys, {prompt: '選択してください'}, class: 'form-control' %>
          <%#<% if @meeting.errors.include?(:area) %>
            <%#<p style="color: red;"><%= @meeting.errors.full_messages_for(:area).first %>
          <%#<% end %>
      <%#</div>#%>
      <div class="form-group field">
        <%= f.label :"募集日" , class: "form-control-label"%>
        <%= f.date_field :date, class: "form-control" %>
        <% if @meeting.errors.include?(:date) %>
            <p style="color: red;"><%= @meeting.errors.full_messages_for(:date).first %>
        <% end %>
      </div>
      <div class="form-group field">
        <%= f.label :"参加してほしい時間" , class: "form-control-label"%>
        <%= f.time_field :time, class: "form-control" %>
        <% if @meeting.errors.include?(:time) %>
            <p style="color: red;"><%= @meeting.errors.full_messages_for(:time).first %>
        <% end %>
      </div>
      <div class="form-group field">
        <%= f.label :"お店の名前（最大100字）" , class: "form-control-label"%>
        <%= f.text_field :bar, class: "form-control" %>
        <% if @meeting.errors.include?(:bar) %>
            <p style="color: red;"><%= @meeting.errors.full_messages_for(:bar).first %>
        <% end %>
      </div>
      <div class="form-group field">
        <%= f.label :"お店のURL（最大175字）" , class: "form-control-label"%>
        <%= f.url_field :url, class: "form-control" %>
        <% if @meeting.errors.include?(:url) %>
            <p style="color: red;"><%= @meeting.errors.full_messages_for(:url).first %>
        <% end %>
      </div>
      <div class="form-group field">
        <%= f.label :"募集人数や、滞在時間について（最大400字）" , class: "form-control-label"%>
        <%= f.text_area :explain,  class: "form-control" %>
        <% if @meeting.errors.include?(:explain) %>
            <p style="color: red;"><%= @meeting.errors.full_messages_for(:explain).first %>
        <% end %>
      </div>
      <div class="form-group field">
        <%= f.label :"サムネイル画像", class: "form-control-label" %>
        <%= f.file_field :image, autocomplete: "image", class: "form-control" %>
        <% if @meeting.errors.include?(:image) %>
            <p style="color: red;"><%= @meeting.errors.full_messages_for(:image).first %>
        <% end %>
      </div>
      <% if @meeting.errors.any? %>
      <div id="error_explanation">
        <p style="background: #FF82B2;"><%= pluralize(@meeting.errors.count, "error") %> 募集の投稿に失敗しました</p>
      </div>
      <% end %>
    </div>

    <div class="modal-footer actions">
      <%= f.submit "募集する", class: "btn btn-outline-primary"%>
      <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
    </div>

    <% end %>
  </div>
</div>